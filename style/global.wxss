.full-page {
  width: 100vw;
  height: 100vh;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: constant(safe-area-inset-bottom); /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom); /*兼容 IOS>11.2*/
  box-sizing: border-box;
}

.map {
  width: 100%;
  height: 100%;
}

.safe-area {
  padding-bottom: constant(safe-area-inset-bottom); /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom); /*兼容 IOS>11.2*/
}